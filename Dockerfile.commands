FROM golang:1.25-alpine AS builder

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN CGO_ENABLED=0 GOOS=linux go build -o /bin/commands ./cmd/commands

FROM alpine:latest

RUN apk --no-cache add ca-certificates

COPY --from=builder /bin/commands /bin/commands

EXPOSE 8080

CMD ["/bin/commands"]
